{% extends 'layouts/_page.html.twig' %}

{% set titre = "Contact" %}

{% block page %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col">
            {{ form_row(form.nom) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.email) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.message) }}
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <input type="submit" class="blog-button bb-green" value="Envoyer">
    </div>
    {{ form_end(form) }}
{% endblock %}
